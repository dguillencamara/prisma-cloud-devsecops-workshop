    git_modifiers        = "tprendervill"
    git_org              = "dguillencamara"
    git_repo             = "prisma-cloud-devsecops-workshop"
    yor_name             = "web-node"
    yor_trace            = "33506e63-cb42-45ae-82cf-2f95a28b2c54"
  }
}

